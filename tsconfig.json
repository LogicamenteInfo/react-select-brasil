{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "outDir": "./lib",
    "noFallthroughCasesInSwitch": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["demo"]
}
